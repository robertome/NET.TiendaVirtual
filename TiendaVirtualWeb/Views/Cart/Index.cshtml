@model TiendaVirtualWeb.Models.CartViewModel

@{
    ViewBag.Title = "Cart";
}

<h2>Cart</h2>


<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Items.FirstOrDefault().TotalPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.PictureUri)"
                     alt="@Html.DisplayFor(modelItem => item.PictureUri)"
                     height="85" width="80" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @using (Html.BeginForm("RemoveFromCart", "Cart"))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", item.ArticleId)
                    <div class="form-actions">
                        <input type="submit" value="X" class="btn btn-default" />
                    </div>
                }
            </td>
        </tr>
    }
</table>

<div class="container">
    <div class="row">
        <div class="panel panel-info col-lg-4">
            <div class="panel-heading h2 btn-">@Html.DisplayNameFor(model => model.Total): @Html.DisplayFor(model => model.Total)</div>
            @if(!Model.Empty) { 
            <div class="panel-body">
                @Html.ActionLink("Order", "Index", "Shop", new { @class = "btn btn-primary btn-lg btn-block" })
            </div>
            }
        </div>
    </div>
    <div class="row">        
        @Html.ActionLink("Continue shopping", "Index", "Shop")
    </div>
</div>






