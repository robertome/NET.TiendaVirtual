@model IEnumerable<TiendaVirtualWeb.Models.ArticleViewModel>

@{
    ViewBag.Title = "Index";
}


<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>        
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Url.Content(item.PictureUri)"
                 alt="@Html.DisplayFor(modelItem => item.PictureUri)"
                 height="120" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>        
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>        
        <td>
            @Html.ActionLink("Details", "AddToCart", new { id = item.Id })
        </td>
    </tr>
}

</table>
